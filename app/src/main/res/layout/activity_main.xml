                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:orientation="vertical">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="21" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
