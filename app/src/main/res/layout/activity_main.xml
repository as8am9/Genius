                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/quesNum10"
                        style="@style/question_header"
                        android:text="@string/no_10"/>

                    <EditText
                        android:id="@+id/ans_10"
                        style="@style/editText"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                style="@style/button"
                android:onClick="toast"
                android:text="Submit" />
        </RelativeLayout>

    </LinearLayout>

</ScrollView>